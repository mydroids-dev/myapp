<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f6f8;
            color: #333;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
        }

        h1 {
            margin-bottom: 20px;
            color: #34495e;
            font-size: 2.5em;
            text-align: center;
        }

        h2 {
            margin: 20px 0;
            color: #34495e;
            font-size: 1.8em;
            text-align: left;
            width: 100%;
            max-width: 600px;
        }

        .button {
            display: inline-block;
            padding: 10px 20px;
            color: white;
            background-color: #e6520d;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
            font-size: 1em;
            margin: 10px 0;
        }

        .button:hover {
            background-color: #d44d0c;
        }

        .topnav {
            overflow: hidden;
            background-color: #2c3e50;
            width: 100%;
            max-width: 600px;
            border-radius: 5px;
            margin-bottom: 20px;
        }

        .topnav a {
            float: left;
            display: block;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            transition: background-color 0.3s ease;
            font-weight: 600;
        }

        .topnav a:hover {
            background-color: #2980b9;
        }

        .topnav .icon {
            display: none;
        }

        @media screen and (max-width: 600px) {
            .topnav a { display: none; }
            .topnav .icon {
                float: right;
                display: block;
            }
            .topnav.responsive { position: relative; }
            .topnav.responsive .icon {
                position: absolute;
                right: 0;
                top: 0;
            }
            .topnav.responsive a {
                float: none;
                display: block;
                text-align: left;
            }
        }

        ul {
            list-style-type: none;
            padding: 0;
            width: 100%;
            max-width: 600px;
            margin-top: 20px;
        }

        li {
            background: white;
            margin-bottom: 10px;
            padding: 15px;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .stats-container {
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            margin-bottom: 30px;
            width: 100%;
            max-width: 600px;
        }

        .flex-grid {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 20px;
        }

        .stat {
            flex: 1;
            min-width: 120px;
            background: #ecf0f1;
            padding: 15px;
            border-radius: 5px;
            text-align: center;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s ease;
        }

        .stat:hover {
            transform: scale(1.05);
        }

        .stat span {
            display: block;
            font-size: 1.2em;
            color: #34495e;
            font-weight: 600;
        }

        .stat strong {
            font-size: 1.5em;
            color: #e6520d;
        }
    </style>
</head>
<body>
    <h1>Admin Panel</h1>

    <div class="topnav" id="myTopnav">
        <a href="/admin">Home</a>
        <a href="/admin/booking">Book Ticket</a>
        <a href="/admin/register">Make New Admin</a>
        <a href="/logout">Logout</a>
        <a href="javascript:void(0);" class="icon" onclick="toggleFunction()">
            <i class="fa fa-bars"></i>
        </a>
    </div>

    <div class="stats-container">
        <div class="flex-grid">
            <div class="stat">
                <span>Total Bookings:</span>
                <strong><%= totalBookings %></strong>
            </div>
            <div class="stat">
                <span>Today's Bookings:</span>
                <strong><%= todayBookings %></strong>
            </div>
            <div class="stat">
                <span>Total Collection:</span>
                <strong>₹<%= totalCollection.toFixed(2) %></strong>
            </div>
            <div class="stat">
                <span>Total Advance Amount:</span>
                <strong>₹<%= totalAdvance.toFixed(2) %></strong>
            </div>
            <div class="stat">
                <span>Total Remaining Amount:</span>
                <strong>₹<%= totalRemaining.toFixed(2) %></strong>
            </div>
            <div class="stat">
                <span>Total Discount:</span>
                <strong>₹<%= totalDiscount.toFixed(2) %></strong>
            </div>
        </div>
    </div>

    <a href="/admin/download-excel" class="button">Download Excel</a>
    <!-- Add this in your admin.ejs template -->
    <a href="/admin/bulk-upload" class="button">Bulk Upload Bookings</a>

    <h2>Filter Bookings by Date</h2>
    <form action="/admin/booking-summary" method="post" style="margin-bottom: 30px;">
        <label for="startDate">From:</label>
        <input type="date" id="startDate" name="startDate" required>
        
        <label for="endDate">To:</label>
        <input type="date" id="endDate" name="endDate" required>
        
        <button type="submit" class="button">Get Summary</button>
    </form>

    <h2>Bookings</h2>
<ul>
    <% bookings.forEach(booking => { %>
        <li>
            <div>
                <strong>ID:</strong> <%= booking.bookingId %> | 
                <strong>Remaining Amount:</strong> ₹<%= booking.remainingAmount.toFixed(2) %>
            </div>
            <div>
                <form action="/admin/pay/<%= booking.bookingId %>" method="post" style="display:inline;">
                    <button type="submit" class="button" style="padding: 5px 10px; font-size: 0.9em;">Mark as Paid</button>
                </form>
                <a href="/slip/<%= booking.bookingId %>" class="button" style="padding: 5px 10px; font-size: 0.9em;">View Payment Slip</a>
                <a href="/admin/edit/<%= booking.bookingId %>" class="button" style="padding: 5px 10px; font-size: 0.9em;">Edit</a>
            </div>
        </li>
    <% }) %>
</ul>

    <script>
        function toggleFunction() {
            var x = document.getElementById("myTopnav");
            x.classList.toggle("responsive");
        }
    </script>
</body>
</html>